{
  "git": {
    "commitMessage": "chore(release): ${version} [skip ci]",
    "tagName": "v${version}",
    "requireCleanWorkingDir": false,
    "push": true
  },
  "github": {
    "release": true,
    "releaseName": "v${version}"
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits",
      "infile": "CHANGELOG.md"
    }
  }
}