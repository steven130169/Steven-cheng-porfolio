{
  "name": "steven-cheng-portfolio-monorepo",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "test": "npm run test:frontend:unit && npm run test:backend:unit && npm run test:e2e",
    "test:frontend:unit": "npm run test:unit -w frontend",
    "test:backend:unit": "npm run test -w backend",
    "test:e2e": "playwright test -c e2e/playwright.config.ts",
    "lint": "npm run lint -w frontend && npm run lint -w backend",
    "release": "release-it",
    "start:frontend": "npm run dev -w frontend",
    "start:backend": "npm run start:dev -w backend",
    "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\" --names \"BACKEND,FRONTEND\" --prefix-colors \"blue,green\""
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@cucumber/cucumber": "^12.3.0",
    "@playwright/test": "^1.57.0",
    "@release-it/conventional-changelog": "^10.0.2",
    "@types/node": "^24.10.1",
    "concurrently": "^9.2.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "playwright": "^1.57.0",
    "playwright-bdd": "^8.4.2",
    "release-it": "^19.0.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.0"
  }
}
